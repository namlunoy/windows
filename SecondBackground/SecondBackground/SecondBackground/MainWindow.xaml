<Window x:Class="SecondBackground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="window"
        BorderBrush="Black"
        WindowStyle="None"
        Title="MainWindow" 
        MouseDown="Window_MouseDown"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        
        Height="350" Width="525" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="Black" >
        <Image Name="_image" Stretch="Uniform" Source="bg.jpg" />
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Bottom"  Foreground="White" Margin="1" FontFamily="Consolas" >
            <Hyperlink Click="ClickFacebook" Foreground="White">The Brown Box</Hyperlink>
        </TextBlock>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0,0,20,0" >
            <Hyperlink Foreground="White" Click="ClickMoreApps" >
                more apps
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
